pipeline {
    agent any

    stages {
        stage('Clone repository') {
            steps {
                git 'https://github.com/Keshah/MoudePracticeWDIO.git'
            }
        }

        stage('Install dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Run API tests') {
            steps {
                bat 'npx newman run test/trello_collection.json'
            }
        }
    }
}