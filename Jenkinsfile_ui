pipeline {
    agent any
    stages {
        stage('Clone repository') {
            steps {
                git 'https://github.com/Keshah/MoudePracticeWDIO.git'
            }
        }
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run UI tests') {
            steps {
                sh 'npx wdio wdio.conf.js'
            }
        }
    }
}
